<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:layout_alignParentTop="true"
        android:fadingEdge="horizontal|vertical"
        tools:fadingEdge="none">

        <TextView
            android:id="@+id/item_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignStart="@+id/item_title"
            android:layout_below="@+id/item_categ"
            android:text="TextView"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:id="@+id/item_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/item_categ"
            android:layout_toEndOf="@+id/item_categ"
            android:text="TextView"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/item_valoration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:layout_alignBaseline="@+id/item_year"
            android:layout_alignBottom="@+id/item_year"
            android:layout_toEndOf="@+id/item_year"
            android:text="TextView"
            android:textColor="#0000FF"
            android:layout_row="2"
            android:layout_column="2" />

        <TextView
            android:id="@+id/item_categ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#810000"
            android:layout_below="@+id/item_title"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="0"
            android:textStyle="normal|bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_delete"
            android:id="@+id/imageView3"
            android:layout_row="1"
            android:layout_column="7" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="7dp"

            android:layout_marginLeft="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="17sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_above="@+id/item_categ"
            android:layout_toEndOf="@+id/item_categ"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_row="0"
            android:layout_column="1" />

    </GridLayout>

</RelativeLayout>