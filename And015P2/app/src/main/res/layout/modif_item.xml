<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:layout_alignParentTop="true"
        android:fadingEdge="horizontal|vertical"
        tools:fadingEdge="none">

        <TextView
            android:id="@+id/editorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignStart="@+id/titol"
            android:layout_below="@+id/any"
            android:text="Editorial"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:id="@+id/categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/any"
            android:layout_toEndOf="@+id/any"
            android:text="Categoria"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/any"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@+id/titol"
            android:text="Any"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#433f3f"
            android:layout_below="@+id/titol"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="0"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/valoracio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:layout_alignBaseline="@+id/categoria"
            android:layout_alignBottom="@+id/categoria"
            android:layout_toEndOf="@+id/categoria"
            android:text="Valoracio"
            android:layout_row="2"
            android:layout_column="2"
            android:textAlignment="viewStart"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_above="@+id/any"
            android:layout_toEndOf="@+id/any"
            android:text="Autor"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:id="@+id/titol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titol"
            android:layout_marginTop="7dp"

            android:layout_marginLeft="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal|bold" />

    </GridLayout>


</LinearLayout>